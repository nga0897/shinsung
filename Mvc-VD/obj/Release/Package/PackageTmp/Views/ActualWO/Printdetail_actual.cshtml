            html += '<td class="text-left">' + data.line_no + '</td>';
            html += '<td class="text-right">' + data.fo_qty + '</td>';
            html += '<td class="text-center">' + data.delivery_dt + '</td>';
            html += '<td class="text-left">' + data.re_mark + '</td>';

