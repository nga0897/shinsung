
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Print.cshtml";
}

<div class="actual">
    <input type="hidden" name="name" value="@ViewBag.open_wmtid_popup_window__wmtid" id="pp_wmtid"/>

    <div id="tagetcode"></div>

    <div id="all_in1">

        <div class="container-fluid">
            <div class="row p-0 m-0">
                <div class="col-md-1 all_cg">
                    <div id="barcode_url"></div>
                </div>
                <div class="col-md-2 all_cg">
                    <img src="/Content/themes/Logo-suplier_in.jpg" style="width: 100%; height:80px;" />
                </div>
                <div class="col-md-7 pt-4 text-center">
                    <h1 style="margin: 0; font-size: 35px;">Material Lot Infomation</h1>
                    <h2 style="font-size: 20px;" id="title_actual"></h2>
                </div>

                <div class="col-md-2 p-2" style="border-top: 1px solid; border-bottom: 1px solid">
                    <div class="row">
                        <div class="col-md-6 pt-2 text-center">
                            <p style="height: 65px; text-align: left;">Document Code</p>

                            <p style="margin: 29px 0 0 2px; text-align: left;">Date</p>
                        </div>
                        <div class="col-md-6 pt-2 text-left">
                            <div id="barcode_actual"></div>

                            <div id="datetimeactual" style="text-align: center; margin-top: 10px;">
                                <script>
                                    function formatDate() {
                                        var d = new Date(),
                                            month = '' + (d.getMonth() + 1),
                                            day = '' + d.getDate(),
                                            year = d.getFullYear(),
                                            Hours = d.getHours(),
                                            Minutes = d.getMinutes();

                                        if (month.length < 2) { month = '0' + month; }
                                        if (day.length < 2) { day = '0' + day; }
                                        if (Hours < 10) { Hours = '0' + Hours; }
                                        if (Minutes < 10) Minutes = '0' + Minutes;
                                        time = Hours + ":" + Minutes;
                                        var full = year + "-" + month + "-" + day + " " + time;
                                        $("#datetimeactual").html(full);
                                    }
                                    formatDate()
                                    setInterval(formatDate, 500);
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </
 


    <div class="container-fluid py-4">
        <table id="popup_actual" class="table table-hover table-bordered table-striped " style="width: 100%">
            <tbody>
                <tr>
                    <th>MT ML </th>
                    <td>@ViewBag.ml_no</td>
                </tr>
                <tr>
                    <th>MT NO </th>
                    <td>@ViewBag.mt_no</td>
                </tr>
                <tr>
                    <th>Mt Name </th>
                    <td>@ViewBag.mt_nm</td>
                </tr>
                <tr>
                    <th>Group Qty </th>
                    <td>@ViewBag.gr_qty</td>
                </tr>
                <tr>
                    <th>Process </th>
                    <td>@ViewBag.process</td>
                </tr>
                <tr>
                    <th>Status </th>
                    <td>@ViewBag.mt_sts_cd</td>
                </tr>
                <tr>
                    <th>Location </th>
                    <td>@ViewBag.lct_nm</td>
                </tr>
                <tr>
                    <th>Location Status</th>
                    <td>@ViewBag.lct_sts_cd</td>
                </tr>
            </tbody>
        </table>
    </div>

        </div>
    </div>
</div>

<script src="/Content/grcodejs/qrcode.js"></script>

<script>
    $(function () {

        var mt_cd = "@ViewBag.open_md_cd_popup_window__mt_cd"
        $("#title_actual").html(mt_cd);
        var id = $('#pp_wmtid').val();

        var html = '<div id="code_' + id + '" class="all_cg"></div>';

        $("#barcode_actual").html(html);

        var code = new QRCode(document.getElementById("code_" + id + ""), {
            width: 80,
            height: 80,
        });
        code.makeCode(mt_cd);


        var html_barcode_url = '<div id="code_url_' + id + '" class="all_cg"></div>';
        $("#barcode_url").html(html_barcode_url);
        var code = new QRCode(document.getElementById("code_url_" + id + ""), {
            width: 80,
            height: 80,
        });

        var link = window.location.href;
        code.makeCode(link);
    });
</script>
