<div class="container-fluid">
    <div class="box-body my-2 bg-white">	
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active" id="tab_1"><a href="#tab_1" data-toggle="tab">Create</a></li>
                <li id="tab_2"><a href="#tab_2" data-toggle="tab">Modify</a></li>
            </ul>
        </div>
        <div class="tab-content active" id="tab_c1">
            <form name="form1" id="form1" enctype="multipart/form-data" role="form" method="post" target="zeroFrame">
                <div class="box-body box-body-input-move">
                    <input type="hidden" name="name" value=" " id="remark_color"/>	
                    <input type="hidden" name="emno" id="c_emno" value="1">
                    <div class="row">
                        <div class="col-md-10">
                            <div class="row p-0 m-0">
                                <div class="col-md-3 py-1">
                                    <input type="text" name="As_no" id="c_as_no" class="input-text form-control" placeholder="Asset No"  readonly="readonly"/>
                                </div>
                                <div class="col-md-3 py-1">
                                    <input type="text" name="as_cd" id="c_as_cd" class="input-text form-control" maxlength="10" placeholder="Equip Code" />
                                </div>
                                <div class="col-md-3 py-1">
                                    <input type="text" name="as_nm" id="c_as_nm" class="form-control form-control-text" maxlength="20" placeholder="Equip Name" />
                                </div>
                                <div class="col-md-3 py-1">
                                    <input type="text" name="changr_nm" id="c_changr_id" class="form-control form-control-text" maxlength="20" placeholder="Changer" />
                                </div>
                                <div class="col-md-3 py-1">
                                    <input type="text" name="puhs_dt_ymd" id="c_puchs_dt" class="input-text form-control" maxlength="40" placeholder="Buying Date" />
                                </div>
                                <div class="col-md-3 py-1">
                                    <input type="text" name="cost_dept_cd" id="c_cost_dept_cd" class="input-text form-control" maxlength="40" placeholder="Cost Center" />
                                </div>                           
                                <div class="col-md-6 py-1">
                                    <input type="text" name="lct_sts_cd" id="c_lct_sts_cd" class="input-text form-control" maxlength="3" placeholder="Location" />
                                </div>
                            </div>
                        </div>                           
                        <div class="col-md-2">
                            <div class="row p-0 m-0">
                                <div class="col-md-2 d-flex">
                                    <button type="button" id="c_save_but" class="btn btn-success button-srh2"><i class="fa fa-save">&nbsp;Create</i></button>
                                </div>
                            </div>                           
                        </div>
                    </div>  
                </div>
            </form>
        </div>

        <div class="tab-content hidden" id="tab_c2">
            <form name="form2" id="form2" enctype="multipart/form-data" role="form" method="post" target="zeroFrame">
                <div class="box-body box-body-input-move">
                    <input type="hidden" name="emno" id="m_emno">
                    <div class="row">
                        <div class="col-md-10">
                            <div class="row p-0 m-0">
                                <div class="col-md-3 py-1">
                                    <input type="text" name="As_no" id="m_as_no" class="input-text form-control" placeholder="Asset No"  readonly="readonly"/>
                                </div>
                                <div class="col-md-3 py-1">
                                    <input type="text" name="as_cd" id="m_as_cd" class="input-text form-control" maxlength="10" placeholder="Equip Code" />
                                </div>
                                <div class="col-md-3 py-1">
                                    <input type="text" name="as_nm" id="m_as_nm" class="form-control form-control-text" maxlength="20" placeholder="Equip Name" />
                                </div>
                                <div class="col-md-3 py-1">
                                    <input type="text" name="changr_nm" id="m_changr_id" class="form-control form-control-text" maxlength="20" placeholder="Changer" />
                                </div>
                                <div class="col-md-3 py-1">
                                    <input type="text" name="puhs_dt_ymd" id="m_puchs_dt" class="input-text form-control" maxlength="40" placeholder="Buying Date" />
                                </div>
                                <div class="col-md-3 py-1">
                                    <input type="text" name="cost_dept_cd" id="m_cost_dept_cd" class="input-text form-control" maxlength="40" placeholder="Cost Center" />
                                </div>                           
                                <div class="col-md-6 py-1">
                                    <input type="text" name="lct_sts_cd" id="m_lct_sts_cd" class="input-text form-control" maxlength="3" placeholder="Location" />
                                </div>
                            </div>
                        </div>                           
                        <div class="col-md-2">
                            <div class="row p-0 m-0">
                                <div class="col-md-2 d-flex">
                                    <button type="button" id="m_save_but" class="btn btn-success button-srh2 mr-5" onclick="fun_check2();"><i class="fa fa-save">&nbsp;Modify</i></button>
                                    <button type="button" id="del_save_but" class="btn btn-danger button-srh2"><i class="fa fa-scissors">&nbsp;Delete</i></button>
                                </div>
                            </div>                           
                        </div>
                    </div>  
                </div>
                <!-- /.box-body -->
            </form>
        </div>
    </div>
</div>

