<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">

            <div class="col-md-1 p-1  text-right">
                <label><b>Chart Type </b></label>
            </div>
            <div class="col-md-1 p-1">
                <select name="barchart" id="barchart" class="form-control ">
                    <option value="1">Bar Chart</option>
                    <option value="2">Pie Chart</option>
                </select>
            </div>

            <div class="col-md-1 p-1  text-right">
                <label><b>ML NO</b></label>
            </div>
            <div class="col-md-1">
                <input type="text" name="s_ml_no" id="s_ml_no" class="input-text form-control">
            </div>
            <div class="col-md-1 p-1  text-right">
                <label><b>Date</b></label>
            </div>
            <div class="col-md-1 p-1">
                <input type="text" name="rec_input_dt" id="start" style="text-align: center" class="form-control">
            </div>
            <div class="col-md-0 p-1  text-right">
                <label><b>~</b></label>
            </div>
            <div class="col-md-1 p-1">
                <input type="text" name="rec_input_dt" id="end" style="text-align: center" class="form-control">
            </div>

            <div class="col-md-1 p-2">
                <button id="searchBtn" class="btn btn-sm btn-primary button-srh"><i class="fa fa-search">&nbsp;Search</i></button>
            </div>
        </div>
    </div>

</div>
