@{
    ViewBag.Title = "WOCommon";
    Layout = "~/Views/Shared/_LayoutSI.cshtml";
}

@section Tilte {
    @*<div class="col-xs-12" id="current_menu" data-level_1="MMS" data-level_2="Standard Management(WO)" data-level_3="WO Common(M)"></div>*@
    <div class="col-xs-12" id="current_menu" data-level_1="@Html.Raw(ViewData["MMS"])" data-level_2="@Html.Raw(ViewData["Standard Management(WO)"])" data-level_3="@Html.Raw(ViewData["WO Common(M)"])"></div>

}

<div class="container-fluid">
    <div class="row text-right">
        <div class="col-md-12 px-3">
            <button type="submit" id="excelBtn" class="btn btn-sm btn-warning button-top"><i class="fa fa-file-excel-o">&nbsp;Excel</i></button>
            <button type="submit" id="htmlBtn" class="btn btn-sm btn-warning button-top" hidden="hidden"><i class="fa fa-print">&nbsp;HTML</i></button>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">
            <div class="col-md-1 p-1  text-right">
                <label><b>Code</b></label>
            </div>
            <div class="col-md-2 p-1">
                <input type="text" name="mt_cd" id="mt_cd" class="form-control form-control-text">
            </div>
            <div class="col-md-1 p-1  text-right">
                <label><b>Name</b></label>
            </div>
            <div class="col-md-2 p-1">
                <input type="text" name="mt_nm" id="mt_nm" class="form-control form-control-text">
            </div>
            <div class="col-md-1 p-1  text-right">
                <label><b>Explain</b></label>
            </div>
            <div class="col-md-2 p-1">
                <input type="text" name="mt_exp" id="mt_exp" class="form-control form-control-text">
            </div>
            <div class="col-md-1 p-2">
                <button id="searchBtn" class="btn btn-sm btn-primary button-srh"><i class="fa fa-search">&nbsp;Search</i></button>
            </div>
        </div>
    </div>
</div>


