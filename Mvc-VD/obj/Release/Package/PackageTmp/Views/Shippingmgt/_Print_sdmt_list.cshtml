<style type="text/css">
    .all_cg {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    table.qrhead {
        page-break-before: always;
    }

    tbody {
        font-size: 12px;
        margin: 0px;
        padding: 0px;
    }

   .qrhead {
        width: 229px;
        height: 229px;
    }
</style>

<div id="tagetcode"></div>
