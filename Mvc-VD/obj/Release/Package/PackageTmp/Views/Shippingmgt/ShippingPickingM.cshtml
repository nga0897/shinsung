@model Mvc_VD.Models.w_material_info

@{
    ViewBag.Title = "Put Away (M)";
    Layout = "~/Views/Shared/_LayoutSI.cshtml";
}

@section Tilte {
    <div class="col-xs-12" id="current_menu" data-level_1="WMS" data-level_2="Shipping Management" data-level_3="Picking (M)"></div>
}

<div class="container-fluid">
    <div class="row text-right">
        <div class="col-md-12 px-3">
            <button type="submit" id="excelBtn" class="btn btn-sm btn-warning button-top mr-3"><i class="fa fa-file-excel-o">&nbsp;Excel</i></button>
            <button type="submit" id="htmlBtn" class="btn btn-sm btn-warning button-top mr-3"><i class="fa fa-print">&nbsp;HTML</i></button>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">
            <div class="col-md-3" style="border: 1px solid; padding: 5px">
                <div class="col-md-4  px-1 py-2">
                    <label>Worker</label>
                    <input type="text" name="userid" id="userid" class="input-text form-control">
                </div>
                <div class="col-md-4  px-1 py-2 text-right" id="new">
                    <label style="width:100%">&nbsp;&nbsp;</label>
                    <input type="text" name="uname" id="uname" class="input-text form-control" placeholder="Name" readonly="readonly">
                </div>
                <div class="col-md-4 px-1 py-2">
                    <label style="width:100%">&nbsp;&nbsp;</label>
                    <button type="submit" id="m_save_but" class="btn btn-sm btn-primary button-top" style="float: none;"><i class="fa fa-check-circle">&nbsp;Picking</i></button>
                </div>
            </div>
            <div class="col-md-9">
                <div class="col-md-2 p-1">
                    <label><b>SD NO</b></label>
                    <div class="input-group mt_plus">
                        <input type="text" name="c_sd_no" id="c_sd_no" class="form-control form-control-text">
                        <span class="input-group-addon psbom"><a href="#" class="poupdialog"><i class="fa fa-search text-navy"></i></a></span>
                    </div>
                </div>
                <div class="col-md-2 p-1">
                    <label><b>MT NO</b></label>
                    <input type="text" name="mt_no" id="mt_no" class="form-control">
                </div>
                <div class="col-md-2 p-1">
                    <label><b>QR Code</b></label>
                    <input type="text" name="mt_barcode" id="mt_barcode" class="form-control">
                </div>
                <div class="col-md-2 p-1">
                    <label><b>Work date</b></label>
                    <input type="text" name="start_dt" id="start" class="form-control form-control-text">
                </div>

                <div class="col-md-2 p-1">
                    <label style="width:100%">&nbsp;&nbsp;</label>
                    <input type="text" name="end_dt" id="end" class="form-control form-control-text">
                </div>
                <div class="col-md-2 p-2">
                    <label style="width:100%">&nbsp;&nbsp;</label>
                    <button id="searchBtn" class="btn btn-sm btn-primary button-srh"><i class="fa fa-search">&nbsp;Search</i></button>
                </div>
            </div>

        </div>
    </div>
</div>



<!-- ./Search function -->
@*---------------------------------------------------------------------------------------------------------------------------*@
<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">
            <table id="picMGrid"></table>
            <div id="picMGridPager"></div>
        </div>
    </div>
</div>
@*---------------------------------------------------------------------------------------------------------------------------*@


<div class="dialog" title="SD NO">
    <div class="container-fluid">
        <div class="container-fluid">
            <div class="box-body bg-white text-right">
                <div class="row p-0 m-0">
                    <div class="col-md-12 p-2">
                        <button type="button" class="btn btn-sm btn-success button-srh" id="savestyle"><i class="fa fa-save">&nbsp;Selected</i></button>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="container-fluid">
        <div class="box-body my-2 bg-white boxSD">
            <div class="row p-0 m-0">
                <table id="popups"></table>
                <div id="popupspager"></div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/Shippingmgt/ShippingPickingM/_PickingM.js"></script>
    <script src="~/Scripts/Shippingmgt/ShippingPickingM/_SDNO_Poup.js"></script>
}
