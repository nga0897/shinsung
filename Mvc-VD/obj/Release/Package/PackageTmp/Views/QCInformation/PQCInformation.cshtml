@* Excel & HTML report buttons *@
<div class="container-fluid">
    <div class="row text-right">
        <div class="col-md-12 px-3">
            <button type="submit" id="excelBtn" class="btn btn-sm btn-warning button-top"><i class="fa fa-file-excel-o">&nbsp;Excel</i></button>
            <button type="submit" id="htmlBtn" class="btn btn-sm btn-warning button-top"><i class="fa fa-print">&nbsp;HTML</i></button>
        </div>
    </div>
</div>

@* Search bar *@
<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">
            <div class="col-md-1 p-1  text-right">
                <label><b>WO NO </b></label>
            </div>
            <div class="col-md-1 p-1">
                <div class="input-group mt_plus">
                    <input type="text" name="fo_no" id="fo_no" class="input-text form-control">
                    <span class="input-group-addon psbom"><a href="#" class="poupdialogWO"><i class="fa fa-search text-navy"></i></a></span>
                </div>
            </div>
            <div class="col-md-1 p-1  text-right">
                <label><b>Product</b></label>
            </div>

            <div class="col-md-1 p-1">
                <div class="input-group mt_plus">
                    <input type="text" name="style_no" id="style_no" class="input-text form-control">
                    <span class="input-group-addon psbom"><a href="#" id="poupdialog2" class="poupdialog2"><i class="fa fa-search text-navy"></i></a></span>
                </div>
            </div>
            <div class="col-md-1 p-1  text-right">
                <label><b>BOM NO </b></label>
            </div>

            <div class="col-md-1 p-1">
                <div class="input-group mt_plus">
                    <input type="text" name="bom_no" id="s_bom_no" class="form-control form-control-text">
                    <span class="input-group-addon psbom"><a href="#" id="poupdialog3" class="poupdialog3"><i class="fa fa-search text-navy"></i></a></span>
                </div>
            </div>

            <div class="col-md-1 p-2">
                <button id="searchBtn" class="btn btn-sm btn-primary button-srh"><i class="fa fa-search">&nbsp;Search</i></button>
            </div>

        </div>
    </div>
</div>

