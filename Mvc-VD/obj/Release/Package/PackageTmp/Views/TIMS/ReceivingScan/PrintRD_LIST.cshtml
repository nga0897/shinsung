                "type": "GET",
                "datatype": "json"
            },
            "searching": false,
            "paging": false,
            "bInfo": false,
            "destroy": true,
            "columns": [
                { "data": "rd_no" },
                { "data": "rd_nm" },
                { "data": "rd_sts_cd" },
                { "data": "remark" },

            ],

            'columnDefs': [
                {
                    "targets": 0, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 1, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 2, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 3, // your case first column
                    "className": "text-center",

                },
               
            ],
            "bDestroy": true,

        });

        $('#dataTable2_PartialView_RD_Info_Popup1').DataTable({
            "ajax": {
                "url": "/TIMS/GetTimsReceivingScanListPP?rd_no=" + rd_no,
                "type": "GET",
                "datatype": "json",
            },
            "searching": false,
            "paging": true,
            "bInfo": false,
            "destroy": true,
            "columns": [

                { "data": "wmtid" },
                { "data": "mt_cd" },
                { "data": "bb_no" },
                { "data": "mt_type_nm" },
                { "data": "gr_qty", render: $.fn.dataTable.render.number(',', '.', 0, '') },
                { "data": "sts_nm" },

                { "data": "from_lct_nm" },

                { "data": "lct_sts_cd" },
                {
                    "data": "recevice_dt_tims",
                    render: function (data) {
                        return _Date(data);
                    }
                }
            ],
            'columnDefs': [
                {
                    "targets": 0, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 1, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 2, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 3, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 4, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 5, // your case first column
                    "className": "text-center",
                },

            ],
            "bDestroy": true,

        });


        
    });
    function _Date(cellvalue, options, rowObject) {
        //debugger
        if (cellvalue == null)
            return "";
        var reg = /(\d{4})(\d{2})(\d{2})/;
        if (reg.test(cellvalue))
            return cellvalue.replace(reg, "$1-$2-$3");
        else {
            reg = /(\d{4})(\d{2})\-(\d{2})/;
            if (reg.test(cellvalue))
                return cellvalue.replace(reg, "$1-$2-$3");
            else {
                reg = /(\d{4})\-(\d{2})(\d{2})/;
                if (reg.test(cellvalue))
                    return cellvalue.replace(reg, "$1-$2-$3");
                else {
                    reg = /(\d{4})\-(\d{2})\-(\d{2})/;
                    if (reg.test(cellvalue))
                        return cellvalue.replace(reg, "$1-$2-$3");
                    else {
                        reg = /(\d{4})(\d{2}).(\d{2})/;
                        if (reg.test(cellvalue))
                            return cellvalue.replace(reg, "$1-$2-$3");
                        else {
                            reg = /(\d{4}).(\d{2}).(\d{2})/;
                            if (reg.test(cellvalue))
                                return cellvalue.replace(reg, "$1-$2-$3");

                            else {
                                reg = /(\d{4})(\d{2})\\(\d{2})/;
                                if (reg.test(cellvalue))
                                    return cellvalue.replace(reg, "$1-$2-$3");
                                else {
                                    reg = /(\d{4})\\(\d{2})\\(\d{2})/;
                                    if (reg.test(cellvalue))
                                        return cellvalue.replace(reg, "$1-$2-$3");
                                    else {
                                        reg = /(\d{4})\\(\d{2})\.(\d{2})/;
                                        if (reg.test(cellvalue))
                                            return cellvalue.replace(reg, "$1-$2-$3");
                                        else {
                                            reg = /(\d{4})\.(\d{2})\\(\d{2})/;
                                            if (reg.test(cellvalue))
                                                return cellvalue.replace(reg, "$1-$2-$3");
                                            else
                                                return cellvalue;
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
    $(function () {
        var code = rd_no;

        $('#barcode_PartialView_RD_Info_Popup1').append(code);
        $('#barcode_PartialView_RD_Info_Popup1').barcode(code, "code128", { barWidth: 1, barHeight: 30 });

        $('.popup-dialog-close').click(function () {
            $(".popup-dialog").dialog('close');
        });
    })
</script>