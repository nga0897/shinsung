                <label>Mapping Date</label>
            </div>
            <div class="col-md-1">
                <input type="text" name="input_dt" id="s_input_dt" class="input-text form-control">
            </div>
            <div class="col-md-1 p-1 d-flex">
                <button id="searchBtn" class="btn btn-sm btn-success button-srh ml-5"><i class="fa fa-save">&nbsp;Search</i></button>
