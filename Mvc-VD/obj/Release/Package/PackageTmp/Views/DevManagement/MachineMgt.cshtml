@model IEnumerable<Mvc_VD.Models.d_machine_info>

    @{
        ViewBag.Title = "MachineManagement";
        Layout = "~/Views/Shared/_LayoutSI.cshtml";
    }

    @section Tilte {
        @*<div class="col-xs-12" id="current_menu" data-level_1="MMS" data-level_2="Tools" data-level_3="Machine"></div>*@
        <div class="col-xs-12" id="current_menu" data-level_1="@Html.Raw(ViewData["MMS"])" data-level_2="@Html.Raw(ViewData["Tools"])" data-level_3="@Html.Raw(ViewData["Machine"])"></div>
    }
    <div class="container-fluid">
        <div class="row text-right">
            <div class="col-md-12 px-3">
                <button type="submit" id="excelBtn" class="btn btn-sm btn-warning button-top"><i class="fa fa-file-excel-o">&nbsp;Excel</i></button>
                <button type="submit" id="htmlBtn" class="btn btn-sm btn-warning button-top" hidden="hidden"><i class="fa fa-print">&nbsp;HTML</i></button>
            </div>
        </div>
    </div>
    <!-- Search function -->
    <div class="container-fluid">
        <div class="box-body my-2 bg-white">
            <div class="col-md-12">
                <div class="row p-0 m-0">
                    <div class="col-md-0 px-1 py-2 text-right">
                        <label><b>Type</b></label>
                    </div>
                    <div class="col-md-1 p-1">
                        <select name="mc_type" id="mc_type" class="form-control form-control-text select2">
                            <option value="">*</option>
                        </select>
                    </div>
                    <div class="col-md-1 px-1 py-2 text-right">
                        <label><b>Code</b></label>
                    </div>
                    <div class="col-md-1 p-1">
                        <input type="text" name="mc_no" id="s_mc_no" class="form-control form-control-text" maxlength="20">
                    </div>
                    <div class="col-md-1 px-1 py-2 text-right">
                        <label><b>Name</b></label>
                    </div>
                    <div class="col-md-1 p-1">
                        <input type="text" name="mc_nm" id="s_mc_nm" class="form-control form-control-text " maxlength="20">
                    </div>
                    <div class="col-md-1 px-1 py-2  text-right">
                        <label><b>Create Date</b></label>
                    </div>
                    <div class="col-md-1 p-1">
                        <input type="text" name="start_dt" id="start" class="form-control form-control-text">
                    </div>
                    <div class="col-md-0 px-1 py-2 text-right">
                        <label><b>~</b></label>
                    </div>
                    <div class="col-md-1 p-1">
                        <input type="text" name="end_dt" id="end" class="form-control form-control-text">
                    </div>
                    <div class="col-md-0 p-2  d-flex" style="margin-right: 2px">
                        <button id="searchBtn" class="btn btn-sm btn-primary button-srh"><i class="fa fa-search">&nbsp;Search</i></button>
                    </div>
                    <div class="col-md-1 p-2  d-flex" style="margin-right: 10px">
                        <button id="qrPrintBtn" class="btn btn-sm btn-success button-srh"><i class="fa fa-qrcode">&nbsp;QR Code</i></button>
                    </div>
                </div>
            </div>
            @*<div class="col-md-2">*@
            @*<div class="col-sm-1 p-2">
                    <button id="qrPrintBtn" class="btn btn-sm btn-success button-srh"><i class="fa fa-qrcode">&nbsp;QR Code</i></button>
                </div>*@
            @*</div>*@



        </div>
    </div>
    <div class="container-fluid">
        <div class="box-body my-2 bg-white">
            <div class="row p-0 m-0">
                <div class="col-md-3 py-1 ml-10">
                    <input type="file" name="file" id="imgupload" accept=".xlsx,.xls" class="valid">
                </div>
                <div class="col-md-4 py-2 px-3">
                    <button id="uploadBtn" class="btn btn-sm btn-primary button-srh mr-3"><i class="fa fa-upload">&nbsp;Upload</i></button>
                    <a id="downloadBtn" class="btn btn-success btn-download btnDownload mr-3" href="/Excel/ExcelMachine/Machinet.xlsx" download="Machinet.xlsx"><i class="fa fa-download">&nbsp;Download Form Excel</i></a>
                </div>
                <div class="col-md-2 p-0 m-0" id="result">
                </div>
            </div>
        </div>
    </div>
    <!-- ./Search function -->
    @*---------------------------------------------------------------------------------------------------------------------------*@
    <div class="container-fluid">
        <div class="box-body my-2 bg-white">
            <div class="row p-0 m-0">
                <table id="MachineMgtGrid"></table>
                <div id="MachineMgtPager"></div>
            </div>
        </div>
    </div>
    @*---------------------------------------------------------------------------------------------------------------------------*@
    <div class="container-fluid">
        <div class="box-body my-2 bg-white">
            <input type="hidden" name="color_bg_line" value=" " id="color_bg_line" />
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active" id="tab_1"><a href="#tab_1" data-toggle="tab">Create</a></li>
                    <li id="tab_2"><a href="#tab_2" data-toggle="tab">Modify</a></li>
                </ul>
            </div>
            <div class="tab-content active" id="tab_c1">
                <form id="form1">
                    <div class="row p-2">
                        <div class="col-lg-1 py-1">
                            <input type="hidden" name="name" value=" " id="remark_color" />
                            <input type="hidden" name="mt_id" id="c_mno">
                            <select name="c_mc_type" id="c_mc_type" class="form-control mc_type"></select>
                        </div>
                        <div class="col-lg-1 py-1">
                            <input type="text" name="c_mc_no" id="c_mc_no" class="form-control form-control-text" placeholder="Code">
                        </div>
                        <div class="col-lg-2 py-1">
                            <input type="text" name="c_mc_nm" id="c_mc_nm" class="form-control form-control-text" placeholder="Name">
                        </div>
                        <div class="col-lg-2 py-1">
                            <input type="text" name="c_purpose" id="c_purpose" class="form-control form-control-text" placeholder="Purpose">
                        </div>
                        <div class="col-lg-2 py-1">
                            <input type="text" name="re_mark" id="c_re_mark" class="form-control form-control-text" placeholder="Description">
                        </div>
                        <div class="col-lg-2 py-2 d-flex">
                            <button type="button" id="c_save_but" class="btn btn-success button-sm"><i class="fa fa-save">&nbsp;Create</i></button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="tab-content hidden" id="tab_c2">
                <form id="form2">
                    <div class="row p-2">
                        <div class="col-lg-1 py-1">
                            <input type="hidden" name="mt_id" id="m_mno">
                            <select name="m_mc_type" id="m_mc_type" class="form-control mc_type"></select>
                        </div>
                        <div class="col-lg-1 py-1">
                            <input type="text" name="m_mc_no" id="m_mc_no" class="form-control form-control-text" placeholder="Code" readonly="readonly">
                        </div>
                        <div class="col-lg-2 py-1">
                            <input type="text" name="m_mc_nm" id="m_mc_nm" class="form-control form-control-text" placeholder="Name">
                        </div>
                        <div class="col-lg-2 py-1">
                            <input type="text" name="m_purpose" id="m_purpose" class="form-control form-control-text" placeholder="Purpose">
                        </div>
                        <div class="col-lg-2 py-1">
                            <input type="text" name="re_mark" id="m_re_mark" class="form-control form-control-text" placeholder="Description">
                        </div>
                        <div class="col-lg-2 py-2 d-flex">
                            <button type="button" id="m_save_but" class="btn btn-success button-srh2 mr-5"><i class="fa fa-save">&nbsp;Modify</i></button>
                            <button type="button" id="del_save_but" class="btn btn-danger button-sm"><i class="fa fa-scissors">&nbsp;Delete</i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--Popup -->
    <div id="dialogDangerous" title="Are you make sure DELETE ?">
        <div class="container-fluid">
            <div class="box-body bg-white text-right">
                <div class="row p-0 m-0">
                    <div class="col-md-12 p-2">
                        <button type="button" class="btn btn-sm btn-success button-srh mr-3" id="closestyle">No</button>
                        <button type="button" class="btn btn-sm btn-danger button-srh" id="deletestyle">Yes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ./ Popup -->

    @section scripts{
        <script src="~/Content/jquery.validate_V1.9/jquery.validate.min.js"></script>
        <script src="~/Scripts/DevManagement/MachineMgt/_MachineMgt.js"></script>
        <script src="~/Scripts/DevManagement/MachineMgt/_MachineMgt_Poup.js"></script>
        <script>
            $("#form1").validate({
                //focusInvalid: true,
                rules: {
                    "c_mc_type": {
                        required: true,
                    },
                    "c_mc_no": {
                        required: true,
                    },
                    "c_mc_nm": {
                        required: true,
                    },
                },

            });


            $("#form2").validate({
                rules: {
                    "m_mc_type": {
                        required: true,
                    },
                    "m_mc_nm": {
                        required: true,
                    },
                },
            });
        </script>
    }
