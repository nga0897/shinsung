<div class="poupdialogMachine" title="Machine">
    <div class="container-fluid">
        <div class="tab-content active" id="tab_c_pp1">
            <div class="container-fluid p-0 m-0">
                <div class="box-body well text-right">
                    <div class="row p-0 m-0">
                        <div class="col-md-3 p-2">
                            <select name="mc_type" id="mc_type_pp" class="form-control select2">
                            </select>
                        </div>
                        <div class="col-md-3 p-2">
                            <input type="text" name="mc_no" id="mc_no_pp" placeholder="Machine Code" class="input-text form-control">
                        </div>
                        <div class="col-md-2 p-2">
                            <input type="text" name="mc_nm" id="mc_nm_pp" placeholder="Machine Name" class="input-text form-control">
                        </div>
                        <div class="col-md-2 p-2">
                            <button id="searchBtn_machine" class="btn btn-sm mr-5 btn-primary button-srh"><i class="fa fa-search">&nbsp;Search</i></button>
                        </div>
                        <div class="col-md-2 p-2">
                            <button type="button" class="btn btn-sm btn-success button-srh disabled" id="savemachine"><i class="fa fa-save">&nbsp;Selected</i></button>
                        </div>
                    </div>
                </div>
            </div>
            <form name="formpp1" id="formpp1" enctype="multipart/form-data" role="form" method="post" target="zeroFrame">
                <div class="box-body my-2 bg-white">
                    <div class="p-0 m-0">
                        <table id="popupmachine"></table>
                        <div id="pagermachine"></div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/wipwms/ExportToMachine/ExportToMachineScan.js"></script>
    <script src="~/Scripts/wipwms/ExportToMachine/Product_Poup.js"></script>
    <script src="~/Scripts/wipwms/ExportToMachine/MachinePopup.js"></script>
    <script>
        $(function () {

            var tab = $('.nav-tabs-custom .nav.nav-tabs li a');
            $(tab).click(function (e) {

                var ul = $(e.target).closest('ul');
                $(ul).find('li').removeClass('active');
                $(e.target).closest('li').addClass('active');

            })
        })
    </script>
}
