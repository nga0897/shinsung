<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li id="tab_1" class="active"><a href="#tab_c1" data-toggle="tab">Create</a></li>
                <li id="tab_2"><a href="#tab_c2" data-toggle="tab">Modify</a></li>
            </ul>
        </div>
        <div class="tab-content">
            <div class="tab-pane active" id="tab_c1">
                <form id="form1">
                    <input type="hidden" name="CreateProductName" id="CreateProductName" class="input-text form-control">
                    <div class="box-body box-body-input-move">
                        <div class="col-md-12 pull-right" style="margin-top:-39px">
                            <button type="button" id="c_save_but" class="btn btn-success button-sm"><i class="fa fa-save">&nbsp;Create</i></button>
                        </div>
                        <div class="col-md-12">
                            <div class="row">

                                <div class="col-md-2  py-1">
                                    <label>Product Code</label>
                                    <div class="input-group mt_plus">
                                        <input type="text" name="ProductCode" id="CreateProductCode" readonly class="input-text form-control" required>

                                        <span class="input-group-addon psbom"><a href="#" class="poupdialogStyle"><i class="fa fa-search text-navy"></i></a></span>
                                    </div>
                                </div>
                                <div class="col-md-2 hidden py-1">
                                    <label>Machine</label>
                                    <div class="input-group mt_plus">
                                        <input type="text" name="MachineCode" value="Machine" readonly id="CreateMachineCode" class="input-text form-control">
                                        <span class="input-group-addon psbom">
                                            <a href="#" class="ClickppMachine"><i class="fa fa-search text-navy"></i></a>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-2 py-1">
                                    <label>Description</label>
                                    <input type="text" name="Description" id="CreateDescription" class="form-control form-control-text" placeholder="Description">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="tab-pane" id="tab_c2">
                <form id="form2">
                    <input type="hidden" name="name" id="m_id" value="" />
                    <input type="hidden" name="name" id="modifyExportCode" value="" />
                    <input type="hidden" name="ModifyProductName" id="ModifyProductName" class="input-text form-control">
                    <div class="box-body box-body-input-move">
                        <div class="col-md-12 pull-right" style="margin-top:-39px">
                            <button type="button" id="m_delete_but" class="btn btn-danger button-sm"><i class="fa fa-trash">&nbsp;Delete</i></button>
                            <button type="button" id="m_save_but" class="btn btn-success button-sm"><i class="fa fa-save">&nbsp;Modify</i></button>
                        </div>
                        <div class="col-md-12">
                            <div class="row">

                                <div class="col-md-2  py-1">
                                    <label>Product Code</label>
                                    <div class="input-group mt_plus">
                                        <input type="text" name="ProductCode" readonly id="ModifyProductCode" class="input-text form-control">
                                        <span class="input-group-addon psbom"><a href="#" class="poupdialogStyle"><i class="fa fa-search text-navy"></i></a></span>
                                    </div>
                                </div>
                                <div class="col-md-2 hidden py-1">
                                    <label>Machine</label>
                                    <div class="input-group mt_plus">
                                        <input type="text" name="MachineCode" value="Machine" readonly id="ModifyMachineCode" class="input-text form-control">
                                        <span class="input-group-addon psbom">
                                            <a href="#" class="ClickppMachine"><i class="fa fa-search text-navy"></i></a>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-2 py-1">
                                    <label>Description</label>
                                    <input type="text" name="Description" id="ModifyDescription" class="form-control form-control-text" placeholder="Description">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row box-body my-2">
        <div class="col-md-4 py-1">
            <label>ML No</label>
            <input type="text" name='mt_cd' id='scan_mt_cd' class="input-text form-control" placeholder="ML No" required>
            <button type="button" id="Clear_all" class="btn btn-danger button-sm"><i class="fa fa-trash">&nbsp;Clear All</i></button>
        </div>
        <div class="col-md-6 py-1">
            <button type="button" id="Save_completed" class="btn btn-success button-sm"><i class="fa fa-save">&nbsp;Scan Completed</i></button>
        </div>
    </div>
</div>
