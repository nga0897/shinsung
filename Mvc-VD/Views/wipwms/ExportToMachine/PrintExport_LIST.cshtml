                    </tr>
                </thead>
            </table>
        </div>
        <div class="col-md-5">
            <h4>Count ML NO</h4>
            <table id="dataTable4_PartialView_SD_Info_Popup1" class="table table-bordered table-striped" style="width: 100%">
                <thead>
                    <tr class="table-warning">
                        <th>MT NO</th>
                        <th>Cấp</th>
                        <th>Đang sử dụng</th>
                        <th>Đã sử dụng hết</th>
                        <th>Trả về</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            total
                        </th>
                        <th>

                        </th>
                        <th>
                        </th>
                        <th>
                        </th>
                        <th>
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<div class="container-fluid py-4">
    <h4>List</h4>
    <table id="dataTable2_PartialView_SD_Info_Popup1" class="table table-bordered table-striped" style="width: 100%">
        <thead>

            <tr class="table-warning">

                <th style="text-align: center !important">STT</th>
                <th style="text-align: center !important">PO NO</th>
                <th style="text-align: center !important">MT NO</th>
                <th style="text-align: center !important">ML NO</th>
                <th style="text-align: center !important">Group Qty</th>
                <th style="text-align: center !important">Status</th>
                <th style="text-align: center !important">Machine</th>
                <th style="text-align: center !important">Shipping Time</th>

            </tr>
        </thead>
    </table>
</div>


<script>
    var ExportCode = "@ViewData["Message"]";
    $(function () {
        $('#dataTable1_PartialView_SD_Info_Popup1').DataTable({
            "ajax": {
                "url": "/ExportToMachine/GetShippingtoMachinePP?ExportCode=" + ExportCode,
                "type": "GET",
                "datatype": "json"
            },
            "searching": false,
            "paging": false,
            "bInfo": false,
            "destroy": true,
            "columns": [
                { "data": "ExportCode" },
                { "data": "ProductCode" },
                { "data": "ProductName" },
                { "data": "Description" },

            ],

            'columnDefs': [
                {
                    "targets": 0, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 1, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 2, // your case first column
                    "className": "text-center",

                },
            ],
            "bDestroy": true,

        });
        $('#dataTable4_PartialView_SD_Info_Popup1').DataTable({
            "ajax": {

                "url": "/ExportToMachine/GetShippingScanPP_Count_MT_no?ExportCode=" + ExportCode,
                "type": "GET",
                "datatype": "json"
            },
            "searching": false,
            "paging": false,
            "bInfo": false,
            "destroy": true,
            "columns": [
                { "data": "mt_no" },
                { "data": "cap" },
                { "data": "dangsd" },
                { "data": "dasd" },
                { "data": "trave" },
            ],
            "footerCallback": function (row, data, start, end, display) {
                var api = this.api(), data;

                // converting to interger to find total
                var intVal = function (i) {
                    return typeof i === 'string' ?
                        i.replace(/[\$,]/g, '') * 1 :
                        typeof i === 'number' ?
                            i : 0;
                };

                // computing column Total of the complete result
                var monTotal = api
                    .column(1)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);

                var tueTotal = api
                    .column(2)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);

                var wedTotal = api
                    .column(3)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);
                var thuTotal = api
                    .column(4)
                    .data()
                    .reduce(function (a, b) {
                        return intVal(a) + intVal(b);
                    }, 0);

              



                // Update footer by showing the total with the reference of the column index
                $(api.column(0).footer()).html('Total');
                $(api.column(1).footer()).html(monTotal);
                $(api.column(2).footer()).html(tueTotal);
                $(api.column(3).footer()).html(wedTotal);
                $(api.column(4).footer()).html(thuTotal);
            },
            "processing": true,
            'columnDefs': [
                {
                    "targets": 0, // your case first column
                    "className": "text-left",

                },
                {
                    "targets": 1, // your case first column
                    "className": "text-center",

                },


            ],
            "bDestroy": true,

        });
        var t =    $('#dataTable2_PartialView_SD_Info_Popup1').DataTable({
            "ajax": {
                "url": "/ExportToMachine/GetListExportToMachine?ExportCode=" + ExportCode,
                "type": "GET",
                "datatype": "json",
            },
            "searching": false,
            "paging": true,
            "bInfo": false,
            "destroy": true,
            "columns": [
                { "data": "wmtid" },
                { "data": "at_no" },
                { "data": "mt_no" },
                { "data": "mt_cd" },
                { "data": "gr_qty", render: $.fn.dataTable.render.number(',', '.', 0, '') },
                { "data": "statusName" },
                { "data": "machine_id" },
                {
                    "data": "ShippingToMachineDatetime",

                    render: function (data) {
                        if (data != null && data != '') {
                            return formatDate_(new Date(Number(data.replace(/\D/g, ''))));
                        }
                        return "";
                    }
                },
            ],
            //'rowsGroup': [2],
            'columnDefs': [
                {
                    "targets": 0, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 1, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 2, // your case first column
                    "className": "text-left",

                },
                {
                    "targets": 3, // your case first column
                    "className": "text-left",

                },
                {
                    "targets": 4, // your case first column
                    "className": "text-center",

                },
                {
                    "targets": 5, // your case first column
                    "className": "text-center",
                },

            ],
            "lengthMenu": [[20, 50, 100, 200, 500, -1], [20, 50, 100, 200, 500, "All"]],
            "bDestroy": true,
            "order": [[1, 'asc']],
        });
        t.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();

       
    });

    $(function () {
        var code = ExportCode;

        $('#barcode_PartialView_SD_Info_Popup1').append(code);
        $('#barcode_PartialView_SD_Info_Popup1').barcode(code, "code128", { barWidth: 1, barHeight: 30 });

        $('.popup-dialog-close').click(function () {
            $(".popup-dialog").dialog('close');
        });
    });
    function formatDate_(date) {
        //var d = new Date(date),
        month = '' + (date.getMonth() + 1),
            day = '' + date.getDate(),
            year = date.getFullYear();
        hours = date.getHours(),
            minutes = date.getMinutes();

        if (month.length < 2)
            month = '0' + month;
        if (day.length < 2)
            day = '0' + day;
        if (hours < 10)
            hours = '0' + hours;
        if (minutes < 10)
            minutes = '0' + minutes;

        return [year, month, day].join('-') + " " + [hours, minutes].join(':');
    }
    function _Date(cellvalue, options, rowObject) {

        if (cellvalue == null)
            return "";
        var reg = /(\d{4})(\d{2})(\d{2})/;
        if (reg.test(cellvalue))
            return cellvalue.replace(reg, "$1-$2-$3");
        else {
            reg = /(\d{4})(\d{2})\-(\d{2})/;
            if (reg.test(cellvalue))
                return cellvalue.replace(reg, "$1-$2-$3");
            else {
                reg = /(\d{4})\-(\d{2})(\d{2})/;
                if (reg.test(cellvalue))
                    return cellvalue.replace(reg, "$1-$2-$3");
                else {
                    reg = /(\d{4})\-(\d{2})\-(\d{2})/;
                    if (reg.test(cellvalue))
                        return cellvalue.replace(reg, "$1-$2-$3");
                    else {
                        reg = /(\d{4})(\d{2}).(\d{2})/;
                        if (reg.test(cellvalue))
                            return cellvalue.replace(reg, "$1-$2-$3");
                        else {
                            reg = /(\d{4}).(\d{2}).(\d{2})/;
                            if (reg.test(cellvalue))
                                return cellvalue.replace(reg, "$1-$2-$3");

                            else {
                                reg = /(\d{4})(\d{2})\\(\d{2})/;
                                if (reg.test(cellvalue))
                                    return cellvalue.replace(reg, "$1-$2-$3");
                                else {
                                    reg = /(\d{4})\\(\d{2})\\(\d{2})/;
                                    if (reg.test(cellvalue))
                                        return cellvalue.replace(reg, "$1-$2-$3");
                                    else {
                                        reg = /(\d{4})\\(\d{2})\.(\d{2})/;
                                        if (reg.test(cellvalue))
                                            return cellvalue.replace(reg, "$1-$2-$3");
                                        else {
                                            reg = /(\d{4})\.(\d{2})\\(\d{2})/;
                                            if (reg.test(cellvalue))
                                                return cellvalue.replace(reg, "$1-$2-$3");
                                            else
                                                return cellvalue;
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
</script>
