@{
    ViewBag.Title = "Receiving_Manual";
    Layout = "~/Views/Shared/_LayoutSI.cshtml";
}


@section Tilte {
    <div class="col-xs-12" id="current_menu" data-level_1="WIP-WMS" data-level_2="Receiving Management" data-level_3="Receiving-Manual(WIP)"></div>

}
<!-- Search function -->
<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">
            <div class="col-md-4 p-1">
                <div class="tt" style="border: 1px solid #808080; padding: 8px;">
                    <div class="row">
                        <div class="col-md-2 p-1 text-right">
                            <label><b>Location</b></label>
                        </div>
                        <div class="col-md-6 p-1 text-right">
                            <select id="shelf_cd" class="form-control">
                                <option value="">*Location*</option>
                            </select>
                        </div>
                        <div class="col-md-2 p-1 mr-5 text-right">
                            <button id="getPutin" class="btn btn-sm btn-primary button-srh"><i class="fa fa-search">&nbsp;Put Away</i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="col-md-2 p-1">
                    <label><b>BOM </b></label>
                    <div class="input-group mt_plus">
                        <input type="text" name="mt_no" id="bom_no" class="input-text form-control">
                        <span class="input-group-addon ">
                            <button type="button" class="btn btn-outline-warning button-sm  poupdialog_BOM"><i class="fa fa-search text-navy"></i></button>
                        </span>
                    </div>
                </div>
                <div class="col-md-2 p-1">
                    <label><b>Material No</b></label>
                    <div class="input-group mt_plus">
                        <input type="text" name="mt_no" id="c_mt_no" class="input-text form-control">
                        <span class="input-group-addon ">
                            <button type="button" id="c_popupMater" class="btn btn-outline-warning button-sm  poupdialogMaterial"><i class="fa fa-search text-navy"></i></button>
                        </span>
                    </div>
                </div>
                <div class="col-md-2 p-1">
                    <label><b>ML NO</b></label>
                    <input type="text" name="mt_barcode" id="mt_barcode" class="form-control">
                </div>
                <div class="col-md-2 p-1">
                    <label><b>Destination</b></label>
                    <select name="lct_cd" id="c_lct_cd" class="form-control"></select>
                </div>
               
                <div class="col-md-1 p-1">
                    <label style="width:100%"><b>&nbsp;&nbsp;&nbsp;</b></label>
                    <button id="searchBtn" class="btn btn-sm btn-primary button-srh"><i class="fa fa-search">&nbsp;Search</i></button>
                </div>
            </div>

        </div>
    </div>
</div>


