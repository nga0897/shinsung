        var selRowIds = $('#list_Material').jqGrid("getGridParam", "selarrrow");
        if (selRowIds.length >0) {
            $.ajax({
                url: "/wipwms/UpdateShipping_ScanMLQR_WIP?data=" + selRowIds + "&ex_no=" + '@ViewBag.ex_no',
                type: "get",
                dataType: "json",

                 success: function (response) {

