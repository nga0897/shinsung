<div class="container-fluid">
    <div class="row text-right">
        <div class="col-md-12 px-3">
            <button type="submit" id="excelBtn" class="btn btn-sm btn-warning button-top"><i class="fa fa-file-excel-o">&nbsp;Excel</i></button>
            <button type="submit" id="htmlBtn" class="btn btn-sm btn-warning form-control-text"><i class="fa fa-print">&nbsp;HTML</i></button>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">
            <div class="col-md-3 p-1 ">
                <label><b>Menu Code</b></label>
                <input type="text" name="mn_cd" id="mn_cd" class="form-control form-control-text ">
            </div>
            <div class="col-md-3 p-1 ">
                <label><b>Menu Name</b></label>
                <input type="text" name="mn_nm" id="mn_nm" class="form-control form-control-text ">
            </div>
            <div class="col-md-3 p-1 ">
                <label><b>Full Name</b></label>
                <input type="text" name="full_nm" id="full_nm" class="form-control form-control-text ">
