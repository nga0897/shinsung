@{
    ViewBag.Title = "menuMgt";
    Layout = "~/Views/Shared/_LayoutSI.cshtml";
}


@section Tilte {
    @*<div class="col-xs-12" id="current_menu" data-level_1="STANDARD" data-level_2="System Management" data-level_3="Menu Management"></div>*@
    <div class="col-xs-12" id="current_menu" data-level_1="@Html.Raw(ViewData["STANDARD"])" data-level_2="@Html.Raw(ViewData["System Management"])" data-level_3="@Html.Raw(ViewData["Menu Management"])"></div>
}
<div class="container-fluid">
    <div class="row text-right">
        <div class="col-md-12 px-3">
            <button type="submit" id="excelBtn" class="btn btn-sm btn-warning button-top"><i class="fa fa-file-excel-o">&nbsp;Excel</i></button>
            <button type="submit" id="htmlBtn" class="btn btn-sm btn-warning form-control-text" hidden="hidden"><i class="fa fa-print">&nbsp;HTML</i></button>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">
            <div class="col-md-3 p-1 ">
                <label><b>Menu Code</b></label>
                <input type="text" name="mn_cd" id="mn_cd" class="form-control form-control-text ">
            </div>
            <div class="col-md-3 p-1 ">
                <label><b>Menu Name</b></label>
                <input type="text" name="mn_nm" id="mn_nm" class="form-control form-control-text ">
            </div>
            <div class="col-md-3 p-1 ">
                <label><b>Full Name</b></label>
                <input type="text" name="full_nm" id="full_nm" class="form-control form-control-text ">
            </div>
            <div class="col-md-1 p-2 ">
                <label style="width:100%"><b>&nbsp;&nbsp;</b></label>
                <button id="searchBtn" class="btn btn-sm btn-primary button-srh"><i class="fa fa-search">&nbsp;Search</i></button>
            </div>
        </div>
    </div>
</div>
@*---------------------------------------------------------------------------------------------------------------------------*@
<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">
            <table id="jqGrid"></table>
            <div id="jqGridPager"></div>
        </div>
    </div>
</div>
@*---------------------------------------------------------------------------------------------------------------------------*@

<div class="container-fluid">
    <form id='form1'>
        <div class="box-body my-2 bg-white">
            <div class="row p-0 m-0">
                <input type="hidden" name="lctno" id="m_lctno" value="">
                <div class="col-md-6 text-left">
                    <h4 class="box-title">Update </h4>
                </div>
                <div class="col-md-6 text-right">
                    <button type="button" id="del_save_but" class="btn btn-danger button-sm mr-3"><i class="fa fa-scissors">&nbsp;Delete</i></button>
                    <button type="button" id="m_save_but" class="btn btn-sm btn-success button-srh"><i class="fa fa-save">&nbsp;Modify</i></button>
                </div>
            </div>
            <div class="row p-0 m-0">
                <div class="col-md-4">
                    <input type="text" name="mn_nm" id="m_mn_nm" class="form-control form-control-text" placeholder="Location Name">
                </div>
                <div class="col-md-4">
                    <input type="text" name="url_link" id="m_url_link" class="form-control form-control-text" placeholder="/Controler/Action">
                </div>
                <div class="col-md-2">
                    <select name="use_yn" id="m_use_yn" class="form-control select2">
                        <option value="Y" selected="selected">Use</option>
                        <option value="N">UnUse</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <input type="text" name="re_mark" id="m_re_mark" class="form-control form-control-text" placeholder="Description">
                </div>
            </div>
        </div>
    </form>
</div>

<div class="container-fluid">
    <form id='form2'>
        <div class="box-body my-2 bg-white">
            <div class="row p-0 m-0">
                <input type="hidden" name="lctno" id="c_mnno" value="">
                <input type="hidden" name="remark_color" id="remark_color" value="">
                <div class="col-md-6 text-left">
                    <h4 class="box-title">Create SubLocation<label><input type="checkbox" name="root_yn" id="c_root_yn" value="" class="minimal ml-5">&nbsp;Root </label> </h4>
                </div>
                <div class="col-md-6 text-right">
                    <button type="button" id="c_reset_but" class="btn btn-sm btn-success form-control-text button-srh2 mr-3" onclick="fun_reset();"><i class='fa fa-refresh'>&nbsp;Reset</i></button>
                    <button type="button" id="c_save_but" class="btn btn-sm btn-success button-srh"><i class='fa fa-save'>&nbsp;Create</i></button>
                </div>
            </div>
            <div class="row p-0 m-0">
                <div class="col-md-4">
                    <input type="text" name="mn_nm" id="c_mn_nm" class="form-control form-control-text" placeholder="Location Name">
                </div>
                <div class="col-md-4">
                    <input type="text" name="url_link" id="c_url_link" class="form-control form-control-text" placeholder="/Controler/Action">
                </div>
                <div class="col-md-2">
                    <select name="use_yn" id="c_use_yn" class="form-control ">
                        <option value="Y" selected="selected">Use</option>
                        <option value="N">UnUse</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <input type="text" name="re_mark" id="c_re_mark" class="form-control form-control-text" placeholder="Description">
                </div>
            </div>
        </div>
    </form>
</div>

<!--Popup -->
<div id="dialogDangerous" title="Are you make sure DELETE ?">
    <div class="container-fluid">
        <div class="box-body bg-white text-right">
            <div class="row p-0 m-0">
                <div class="col-md-12 p-2">
                    <button type="button" class="btn btn-sm btn-success button-srh mr-3" id="closestyle">No</button>
                    <button type="button" class="btn btn-sm btn-danger button-srh" id="deletestyle">Yes</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ./ Popup -->
@*---------------------------------------------------------------------------------------------------------------------------*@

@section scripts{
    <script src="~/Scripts/system/menuMgt/_MenuMgt.js"></script>
    <script src="~/Scripts/system/menuMgt/_MenuMgt_Poup.js"></script>

}


