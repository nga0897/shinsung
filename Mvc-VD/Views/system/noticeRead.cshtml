@*---------------------------------------------------------------------------------------------------------------------------*@
<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">
            <div class="col-md-12 pb-2 pt-4 text-right">
                <button type="submit" id="listBtn" class="btn btn-sm btn-success button-srh"><i class="fa fa-save">&nbsp;List</i></button>
                <button type="submit" id="modifyBtn" class="btn btn-sm btn-success button-srh">
                    <i class="fa fa-save">&nbsp;</i>
                    @Html.ActionLink("Modify", "noticeModify", new {  bno= @Html.DisplayFor(model => model.bno)}) 
                </button>
                
            </div>
            <div class="col-md-12 pt-2">
                <div class="box box-solid">
		            <div class="box-header with-border">
		                <i class="fa fa-bullhorn"></i>
		                <h3 class="box-title">@Html.DisplayTextFor(model => model.title)</h3>
		            </div>
		            <div class="box-body">
		                <p> @Html.DisplayTextFor(model => model.content)</p>
		            </div>
		            </div>
		        </div>
                <input type="hidden" name="div_cd" id="div_cd" value="A">
        </div>
    </div>
</div>
@*---------------------------------------------------------------------------------------------------------------------------*@

@section scripts{
<script src="~/ckeditor/ckeditor.js"></script>
<script>
    $(document).ready(function () {

        $(document).ready(function () {
            $('.nav-link > p').addClass('text-white');
            $('.NoticeManagement').addClass('text-warning');

            $('.System-menu').addClass('menu-open');
        });

	    $('#listBtn').on("click",function(event){
	        location.href = "/system/noticeInfoData";
	    });
	
	    $('#modifyBtn').on("click",function(event){
		    location.href="/system/noticeModify"; 
	    });

    });
</script>
}