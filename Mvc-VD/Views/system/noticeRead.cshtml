@model Mvc_VD.Models.notice_board

@{
    Layout = "~/Views/Shared/_LayoutSI.cshtml";
}

@section Tilte {
    <div class="col-xs-12" id="current_menu" data-level_1="STANDARD" data-level_2="System Management" data-level_3="Notice Management" data-level_4="View"></div>
