<!-- ./ Dialog -->
<div class="dialog_PO" title="PO information">
    <div class="container-fluid p-0 my-3">
        <div class="row text-right">
            <div class="col-md-12 px-3">
                <button id="searchBtn_po_popup" class="btn btn-sm mr-3 btn-primary button-srh"><i class="fa fa-search">&nbsp;Search</i></button>
                <button type="button" class="btn btn-sm  btn-success button-srh" id="selectPO"><i class="fa fa-save">&nbsp;Selected</i></button>
            </div>
        </div>
    </div>
    <div class="container-fluid p-0 m-0">
        <form name="form" id="form_pp_po" enctype="multipart/form-data" role="form" method="post" target="zeroFrame" novalidate="novalidate">
            <div class="box-body well text-right">
                <div class="row p-0 m-0">
                    <div class="col-md-12 p-0 m-0">
                        <div class="col-md-2 p-2">
                            <input type="text" name="s_po_no" id="s_po_no" placeholder="PO" maxlength="50" class="input-text form-control">
                        </div>
                        <div class="col-md-2 p-2">
                            <div class="input-group mt_plus">
                                <input type="text" name="s_style_no" id="s_style_no" placeholder="Product Code" maxlength="50" class="input-text form-control">
                                <span class="input-group-addon psbom"><a href="#" id="poupdialogStyle" class="poupdialogStyle"><i class="fa fa-search text-navy"></i></a></span>
                            </div>
                        </div>
                        <div class="col-md-2 p-2">
                            <input type="text" name="s_start" placeholder="Order Date" id="s_start" class="form-control form-control-text">
                        </div>

                        <div class="col-md-2 p-2">
                            <input type="text" name="s_end" placeholder="Order Date" id="s_end" class="form-control form-control-text">
                        </div>
                        <div class="col-md-2 p-2">
                            <div class="input-group mt_plus">
                                <input type="text" name="s_bom_no" id="s_bom_no" placeholder="Bom" maxlength="50" class="input-text form-control">
                                <span class="input-group-addon psbom"><a href="#" id="poupdialog_BOM" class="poupdialog_BOM"><i class="fa fa-search text-navy"></i></a></span>
                            </div>
                        </div>
                        <div class="col-md-2 p-2">
                            <select id="s_destination" class="form-control">
                                <option value="">*Destination*</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="container-fluid p-0 m-0">
        <div class="box-body my-2 bg-white">
            <div class="row p-0 m-0 boxPo">
                <table id="popups_PO"></table>
                <div id="popupspager_PO"></div>
            </div>
        </div>
    </div>
</div>
