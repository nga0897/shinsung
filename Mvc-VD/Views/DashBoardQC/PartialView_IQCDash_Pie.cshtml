                        <div style="border: 1px solid #333">
                            <canvas id="pie_info_@stt1" width="400" height="200"></canvas>
                        </div>
                    </div>
                    <script>

                        $(function () {

                            var data = {
                                labels: ['Check Qty', 'Ok Qty', 'Defect Qty'],
                                datasets: [
                                        {
                                            labels: ['@item.mt_no'],
                                          data: ['@item.qc_qty', '@item.ok_qty', '@item.def_qty'],
                                          backgroundColor: [
                                              'rgba(255, 99, 132, 0.2)',
                                              'rgba(54, 162, 235, 0.2)',
                                              'rgba(255, 206, 86, 0.2)',
                                              'rgba(75, 192, 192, 0.2)',
                                              'rgba(153, 102, 255, 0.2)',
                                              'rgba(255, 159, 64, 0.2)'
                                          ],
                                          borderColor: [
                                              'rgba(255, 99, 132, 1)',
                                              'rgba(54, 162, 235, 1)',
                                              'rgba(255, 206, 86, 1)',
                                              'rgba(75, 192, 192, 1)',
                                              'rgba(153, 102, 255, 1)',
                                              'rgba(255, 159, 64, 1)'
                                          ],
                                          borderWidth: 1
                                      }
                              ]
                          }
                          var options = {

                              title: {
                                  position: 'top',
                                  display: true,
                                  text: "  @item.mwro_no [ @item.rec_input_dt ]",
                              },

                              scaleLabel:
                                 function (label) { return 'gfdfgdf'; }
                          }

                          var myBarChart = new Chart(document.getElementById('pie_info_@stt1').getContext('2d'), {
                              type: 'pie',
                              data: data,
                              options: options
                          });



                      });
                    </script>
                    }
                }
            </div>
        </div>
        <div class="tab-pane" id="tab_4">
            @{
              
                int stt = 0;    
