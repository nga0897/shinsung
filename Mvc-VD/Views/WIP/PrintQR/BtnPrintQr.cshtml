            color: #000;
        }

        .table-bordered td, .table-bordered th {
            border: 1px solid #000 !important;
        }

        div#barcode {
            margin-left: 4%;
        }

        .qrhead {
            width: 50px;
            height: 50px;
        }

        .table td, .table th {
            padding: 0.2px !important;
            vertical-align: top;
        }

        .table {
            width: 415px;
            height: 188px;
        }

        img {
            margin-left: auto;
            margin-right: auto;
            padding-top: 23%;
            width: 110px;
            margin: 5PX;
        }
        .tenlieu {
            font-size: 14px;
        }
