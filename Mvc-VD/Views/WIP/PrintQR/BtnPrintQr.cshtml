    <script src="~/Content/popper_1.14.7/popper.min.js"></script>

    <link href="~/Content/bootstrap_4.3.1/bootstrap.min.css" rel="stylesheet" />
    <style type="text/css">
        .all_cg {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        table.qrhead {
            page-break-before: always;
        }

        body {
            font-size: 10px;
            margin: 0px;
            padding: 0px;
