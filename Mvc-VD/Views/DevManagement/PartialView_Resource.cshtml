            <td class="@item.day_28">@item.po28</td>
            <td class="@item.day_29">@item.po29</td>
            <td class="@item.day_30">@item.po30</td>

            <td class="@item.day_31">@item.po31</td>

        </tr>
    }

</table>

<style>
    table#data, table#data th, table#data td {
        border: 0.5px solid #CCC;
        text-align: center;
    }

    #data {
        font-size: 15px;
        width: 100%;
        text-align: center;
    }

</style>

