@{
    ViewBag.Title = "TrayMgt";
    Layout = "~/Views/Shared/_LayoutSI.cshtml";
}


@section Tilte {
    <div class="col-xs-12" id="current_menu" data-level_1="MMS" data-level_2="Tools" data-level_3="Tray Management"></div>
}
<!-- Search function -->
<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">

            <div class="col-md-1 pt-2 text-right">
                <label><b>Tray Code</b></label>
            </div>
            <div class="col-md-2 p-1">
                <input type="text" name="tr_no" id="tr_no" class="form-control form-control-text">
            </div>
            <div class="col-md-1 pt-2 text-right">
                <label><b>Tray Name</b></label>
            </div>
            <div class="col-md-2 p-1">
                <input type="text" name="tr_nm" id="tr_nm" class="form-control form-control-text">
            </div>
            <div class="col-md-1 p-2">
                <button id="searchBtn" class="btn btn-sm btn-primary"><i class="fa fa-search">&nbsp;Search</i></button>
            </div>
        </div>
    </div>
</div>
<!-- ./Search function -->

@*---------------------------------------------------------------------------------------------------------------------------*@
<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="p-0 m-0">
            <table id="list"></table>
            <div id="pager"></div>
        </div>
    </div>
</div>
@*---------------------------------------------------------------------------------------------------------------------------*@
<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <input type="hidden" name="name" value=" " id="remark_color" />
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active" id="tab_1"><a href="#tab_1" data-toggle="tab">Create</a></li>
                <li id="tab_2"><a href="#tab_2" data-toggle="tab">Modify</a></li>

            </ul>
        </div>
        <div class="tab-content active" id="tab_c1">
            <form name="form1" id="form1" enctype="multipart/form-data" role="form" method="post" target="zeroFrame">
                <div class="box-body box-body-input-move">
                    <input type="hidden" name="byno" id="c_byno" value="1">
                    <div class="row">
                        <div class="col-md-10">
                            <div class="row p-0 m-0">
                                <div class="col-md-auto p-2">
                                    <label>Code</label>
                                </div>
                                <div class="col-md-2 py-1">
                                    <input type="text" name="tr_no" id="c_tr_no" class="input-text form-control"  maxlength="50" placeholder="Code" required>
                                </div>
                                <div class="col-md-auto p-2">
                                    <label>Name</label>
                                </div>
                                <div class="col-md-2 py-1">
                                    <input type="text" name="tr_nm" id="c_tr_nm" class="input-text form-control"  maxlength="50" placeholder="Name"required>
                                </div>
                                
                                  <div class="col-md-auto p-2">
                                      <label>Product Qty</label>
                                  </div>
                                <div class="col-md-2 py-1">
                                    <input type="text" name="prd_qty" id="c_prd_qty" class="input-text form-control form-control-text" maxlength="50" placeholder="Product Qty"required>
                                </div>
                                <div class="col-md-2">
                                    <div class="row p-0 m-0">
                                        <div class="col-md-2 d-flex">
                                            <button type="button" id="c_save_but" class="btn btn-success button-srh2"><i class="fa fa-save">&nbsp;Create</i></button>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="tab-content hidden" id="tab_c2">
            <form name="form2" id="form2" enctype="multipart/form-data" role="form" method="post" target="zeroFrame">
                <div class="box-body box-body-input-move">
                    <input type="hidden" name="trno" id="m_trno" value="">
                    <div class="row">
                        <div class="col-md-10">
                            <div class="row p-0 m-0">
                                    <div class="col-md-auto p-2">
                                    <label>Code</label>
                                </div>
                                <div class="col-md-2 py-1">
                                    <input type="text" name="tr_no" id="m_tr_no" class="input-text form-control" maxlength="50" placeholder="Code" required readonly="readOnly">
                                </div>
                                <div class="col-md-auto p-2">
                                    <label>Name</label>
                                </div>
                                <div class="col-md-2 py-1">
                                    <input type="text" name="tr_nm" id="m_tr_nm" class="input-text form-control" maxlength="50" placeholder="Name" required>
                                </div>
                                
                                  <div class="col-md-auto p-2">
                                      <label>Product Qty</label>
                                  </div>
                                <div class="col-md-2 py-1">
                                    <input type="text" name="prd_qty" id="m_prd_qty" class="input-text form-control form-control-text" maxlength="50" placeholder="Product Qty" required>
                                </div>
                                  <div class="col-md-2">
                                    <div class="row p-0 m-0">
                                        <div class="col-md-2 d-flex">
                                   <button type="button" id="m_save_but" class="btn btn-success button-srh2  mr-5"><i class="fa fa-save">&nbsp;Modify</i></button>
                                        @*<button type="button" id="del_save_but" class="btn btn-danger button-srh2"><i class="fa fa-scissors">&nbsp;Delete</i></button>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                     
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
            <script src="~/Content/jquery.validate_V1.9/jquery.validate.min.js"></script>
    <script src="~/Scripts/DevManagement/TrayMgt/TrayMgt.js"></script>

}