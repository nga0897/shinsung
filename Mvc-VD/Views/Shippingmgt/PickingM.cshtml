@model Mvc_VD.Models.w_material_info

@{
    ViewBag.Title = "Put Away (M)";
    Layout = "~/Views/Shared/_LayoutSI.cshtml";
}

@section Tilte {
    <div class="col-xs-12" id="current_menu" data-level_1="WMS" data-level_2="Shipping Management" data-level_3="Picking (M)"></div>
}

<div class="container-fluid">
    <div class="row text-right">
        <div class="col-md-12 px-3">
            <button type="submit" id="excelBtn" class="btn btn-sm btn-warning button-top"><i class="fa fa-file-excel-o">&nbsp;Excel</i></button>
            <button type="submit" id="htmlBtn" class="btn btn-sm btn-warning button-top"><i class="fa fa-print">&nbsp;HTML</i></button>
            <button type="submit" id="pdfBtn" class="btn btn-sm btn-warning button-top"><i class="fa fa-print">&nbsp;PDF</i></button>
        </div>
    </div>
</div>

<!-- Search function -->
<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">
            <div class="col-md-3 well m-0 p-4">
                <div class="row">
                    <div class="col-md-3 p-1  text-right">
                        <label><b>SD NO</b></label>
                    </div>
                    <div class="col-md-9 p-1">                        
                        <div class="input-group mt_plus">
                            <input type="text" name="sd_no" id="c_sd_no" class="input-text form-control">
                            <span class="input-group-addon psbom"><a href="#" id="poupdialog" class="poupdialog"><i class="fa fa-search text-navy"></i></a></span>
                        </div> 
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 p-1  text-right">
                        <label><b>Location</b></label>
                    </div>
                    <div class="col-md-9 p-1">
                        <select name="lct_cd" id="m_lct_cd" class="form-control form-control-text select2">
                            <option value="">*</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 p-1  text-right">
                        <button id="m_save_but" class="btn btn-sm btn-primary button-srh"><i class="fa fa-save">&nbsp;Picking</i></button>
                    </div>
                    
                </div>
            </div>
             
            <div class="col-md-3">
                <div class="row">
                    <div class="col-md-3 p-1  text-right">
                        <label><b>MR NO</b></label>
                    </div>
                    <div class="col-md-9 p-1">
                        <input type="text" name="mr_no" id="mr_no" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 p-1  text-right">
                        <label><b>MT NO</b></label>
                    </div>
                    <div class="col-md-9 p-1">
                        <input type="text" name="mt_no" id="mt_no" class="form-control">
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-3 p-1  text-right">
                        <label><b>Barcode</b></label>
                    </div>
                    <div class="col-md-9 p-1">
                        <input type="text" name="mt_barcode" id="mt_barcode" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 p-1  text-right">
                        <label><b>Work date</b></label>
                    </div>
                    <div class="col-md-9 p-1">
                        <div class="row p-0 m-0">
                            <div class="col-md-5 p-0 m-0">
                                <input type="text" name="worker_dt" id="start" class="form-control">
                            </div>
                            <div class="col-md-2 p-1 pr-2 text-right">
                                <label>~</label>
                            </div>
                            <div class="col-md-5 p-0 m-0">
                                <input type="text" name="worker_dt" id="end" class="form-control">
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>

            <div class="col-md-2 p-1">
                <button id="searchBtn" class="btn btn-sm btn-primary button-srh ml-5"><i class="fa fa-search">&nbsp;Search</i></button>
            </div>
    </div>
    </div>
</div>
<!-- ./Search function -->

@*---------------------------------------------------------------------------------------------------------------------------*@
<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">
            <table id="picMGrid"></table>
            <div id="picMGridPager"></div>
        </div>
    </div>
</div>
