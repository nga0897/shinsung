@{
    ViewBag.Title = "Material_transport_request";
    Layout = "~/Views/Shared/_LayoutSI.cshtml";
}

@section Tilte {
    <div class="col-xs-12" id="current_menu" data-level_1="MMS" data-level_2="Material Request Management" data-level_3="Material Remain">
    </div>
}

<div class="box-body bg-white">
    <div class="container-fluid">
        <div class="box-body my-2 bg-white">
            <div class="row p-0 m-0">

                <div class="col-md-12">
                    <div class="col-md-1 p-1  text-right">
                        <label><b>BOM NO</b></label>
                    </div>
                    <div class="col-md-2 p-1">
                        <input type="text" name="bom_no" id="v_bom_no" class="input-text form-control">
                    </div>
                    <div class="col-md-1 p-1  text-right">
                        <label><b>Product Code </b></label>
                    </div>
                    <div class="col-md-2 p-1">
                        <input type="text" name="style_no" id="v_style_no" class="input-text form-control">
                    </div>
                    <div class="col-md-1 p-1  text-right">
                        <label><b>Product Name </b></label>
                    </div>
                    <div class="col-md-2 p-1">
                        <input type="text" name="style_nm" id="v_style_nm" class="input-text form-control">
                    </div>
                    <div class="col-md-1 p-1  text-right">
                        <label><b>Model</b></label>
                    </div>
                    <div class="col-md-2 p-1">
                        <input type="text" name="md_cd" id="v_md_cd" class="input-text form-control">
                    </div>
                    <div class="col-md-1 p-1  text-right">
                        <label><b>MT Name</b></label>
                    </div>
                    <div class="col-md-2 p-1">
                        <input type="text" name="mt_nm" id="v_mt_nm" class="input-text form-control">
                    </div>
                    <div class="col-md-1 p-1  text-right">
                        <label><b>Req Date</b></label>
                    </div>
                    <div class="col-md-2 p-1">
                        <input type="text" name="req_rec_dt" id="v_req_rec_dt" class="form-control">
                    </div>
                    <div class="col-md-2 p-1">
                        <button type="button" class="btn btn-sm btn-primary button-srh m-2" id="Save_Remain"><i class="fa fa-save">&nbsp;Search</i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="container-fluid boxA">
            <table id="check_kq"></table>
            <div id="check_kqPager"></div>
        </div>

    </div>
</div>



<!-- ./ Dialog -->
<div class="dialog1">

    <div id="all_in1">
        <div class="container-fluid">
            <div class="box-body my-2 bg-white">
                <h4>Detail</h4>
                <div class="row p-0 m-0">
                    <table id="popupbom" class="table table-striped table-bordered">
                        <thead>
                            <tr class="table-warning">
                                <th scope="col" style="text-align: center !important">STT</th>
                                <th scope="col" style="text-align: center !important">Date Receive</th>
                                <th scope="col" style="text-align: center !important">BOM NO</th>
                                <th scope="col" style="text-align: left !important">MT NO</th>
                                <th scope="col" style="text-align: center !important">MT Real</th>
                                <th scope="col" style="text-align: center !important">Repay Qty</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .col-md-1.col-h {
        display: inline-block;
        text-align: center;
        padding-top: 9%;
    }

    span.input-group-addon {
        padding: 0;
        border: 0.1px solid;
    }

    .ui-jqgrid tr.ui-row-ltr td {
        padding: 5px;
    }
</style>
@section scripts{
    <script src="~/Content/jquery.validate_V1.9/jquery.validate.min.js"></script>
    <script src="~/Scripts/Shippingmgt/Material_transport_request/bom_popup.js"></script>
    <script src="~/Scripts/Shippingmgt/Material_transport_remain/Shipping_remain_tr.js"></script>
}