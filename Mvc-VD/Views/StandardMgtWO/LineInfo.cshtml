@model IEnumerable<Mvc_VD.Models.m_line_info>

@{
    ViewBag.Title = "LineInfo";
    Layout = "~/Views/Shared/_LayoutSI.cshtml";
}

@section Tilte {
    <div class="col-xs-12" id="current_menu" data-level_1="MMS" data-level_2="Standard Management(WO)" data-level_3="Line Information"></div>
}


<div class="container-fluid">
    <div class="row text-right">
        <div class="col-md-12 px-3">
            <button type="submit" id="excelBtn" class="btn btn-sm btn-warning button-top"><i class="fa fa-file-excel-o">&nbsp;Excel</i></button>
            <button type="submit" id="htmlBtn" class="btn btn-sm btn-warning button-top"><i class="fa fa-print">&nbsp;HTML</i></button>
	        
        </div>
    </div>       
</div>

<!-- Search function -->

<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">
            <div class="col-md-auto p-2">
                <label><b>Line Code</b></label>   
            </div>
            <div class="col-md-1 p-1 mr-5">
                <input type="text" name="line_no" id="line_no" maxlength="20" class="input-text form-control">
            </div>
            <div class="col-md-auto p-2">
                <label><b>Line Name</b></label>
            </div>
             
            <div class="col-md-1 p-1 mr-5">
                <input type="text" name="line_nm" id="line_nm" class="form-control" maxlength="50">      
            </div>
           <div class="col-md-1 p-2">    
	            <button id="searchBtn" class="btn btn-sm btn-primary button-srh"><i class="fa fa-search">&nbsp;Search</i></button>
            </div>
        </div>
    </div>
</div>

<!-- ./Search function -->

@*---------------------------------------------------------------------------------------------------------------------------*@
<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">
            <table id="list"></table>
            <div id="gridpager"></div> 
        </div>
    </div>
</div>
@*---------------------------------------------------------------------------------------------------------------------------*@

<div class="container-fluid">
    <div class="box-body my-2 bg-white">	
    <!--BuyerInfo start -->      
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active" id="tab_1"><a href="#tab_1" data-toggle="tab">Create</a></li>
                <li id="tab_2"><a href="#tab_2" data-toggle="tab">Modify</a></li>
            </ul>
        </div>
        <div class="tab-content active" id="tab_c1">
            <form name="form1" id="form1" enctype="multipart/form-data" role="form" method="post" target="zeroFrame">
                <div class="box-body box-body-input-move">
                    <input type="hidden" name="mid" id="c_mid" value="1">
                      <div class="row">
                             <div class="col-md-5">
                                <div class="col-xs-4">
                                     <input type="text" name="line_no" id="c_line_no" class="input-text form-control" maxlength="12" placeholder="Code" readonly="readonly">
                                </div>
                                <div class="col-xs-4">
                                     <input type="text" name="line_nm" id="c_line_nm" class="input-text form-control" maxlength="20" placeholder="Name">
                                </div>
                                <div class="col-xs-4">
                                    <input type="text" name="line_exp" id="c_line_exp" class="input-text form-control" maxlength="100" placeholder="Explantion">
                                </div>
                            </div>
                           <div class="col-md-5">
                                <div class="col-xs-4">
                                    <select name="use_yn" id="c_use_yn" class="form-control">
                                        <option value="Y" selected="selected">Use</option>
                                        <option value="N">UnUse</option>
                                    </select>
                                </div>
                                <div class="col-xs-4">
                                    <div class="input-group my-colorpicker2 colorpicker-element">
			                            <input type="text" name="line_color" id="c_line_color" class="form-control" placeholder="RGB Code" maxlength="10">
			                            <div class="input-group-addon">
			                                <i style="background-color: rgb(0, 0, 0);"></i>
			                            </div>
			                        </div>
                                </div>
                                <div class="col-xs-4">
                                     <input type="text" name="re_mark" id="c_re_mark" class="input-text form-control form-control-text" maxlength="200" placeholder="Re Mark">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="col-xs-4">
                                    <button type="button" id="c_save_but" class="btn btn-success button-srh2 active mr-2"><i class="fa fa-save">&nbsp;Create</i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                <!-- /.box-body -->
            </form>
        </div>

        <div class="tab-content hidden" id="tab_c2">
            <form name="form2" id="form2" enctype="multipart/form-data" role="form" method="post" target="zeroFrame">
                <div class="box-body box-body-input-move">
                    <input type="hidden" name="mid" id="m_mid" value="">
                    <div class="row">
                         <div class="col-md-5">
                            <div class="col-xs-4">
                                 <input type="text" name="line_no" id="m_line_no" class="input-text form-control" maxlength="12" placeholder="Code" readonly="readonly">
                            </div>
                            <div class="col-xs-4">
                                 <input type="text" name="line_nm" id="m_line_nm" class="input-text form-control" maxlength="20" placeholder="Name">
                            </div>
                            <div class="col-xs-4">
                                <input type="text" name="line_exp" id="m_line_exp" class="input-text form-control" maxlength="100" placeholder="Explantion">
                            </div>
                        </div>
                       <div class="col-md-5">
                            <div class="col-xs-4">
                                <select name="use_yn" id="m_use_yn" class="form-control">
                                    <option value="Y" selected="selected">Use</option>
                                    <option value="N">UnUse</option>
                                </select>
                            </div>
                            <div class="col-xs-4">
                                <div class="input-group my-colorpicker2 colorpicker-element">
			                        <input type="text" name="line_color" id="m_line_color" class="form-control" placeholder="RGB Code" maxlength="10">
			                        <div class="input-group-addon">
			                            <i style="background-color: rgb(0, 0, 0);"></i>
			                        </div>
			                    </div>
                            </div>
                            <div class="col-xs-4">
                                 <input type="text" name="re_mark" id="m_re_mark" class="input-text form-control form-control-text" maxlength="200" placeholder="Re Mark">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="col-xs-4">
                                <button type="button" id="m_save_but" class="btn btn-success button-srh2 active mr-2"><i class="fa fa-save">&nbsp;Modify</i></button>
                            </div>
                            <div class="col-xs-4">
                                <button type="button" id="del_save_but" class="btn btn-danger button-srh2"><i class="fa fa-scissors">&nbsp;Delete</i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!--Popup -->
<div class="dialogDangerous" title="Are you make sure DELETE main common?">
    <div class="container-fluid">
        <div class="box-body bg-white text-right">
            <div class="row p-0 m-0">
                <div class="col-md-12 p-2">
                    <button type="button" class="btn btn-sm btn-success button-srh mr-3" id="closeline">No</button>
                    <button type="button" class="btn btn-sm btn-danger button-srh" id="deleteline">Yes</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ./ Popup -->


@section scripts {
    <script src="~/Scripts/StandardMgtWO/Lineinfo.js"></script>
    <script src="~/Scripts/StandardMgtWO/LineInfo_Poup.js"></script>
  

}

