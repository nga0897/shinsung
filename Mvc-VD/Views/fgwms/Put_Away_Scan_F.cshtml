@{
    ViewBag.Title = "Put_Away_Scan_F";
    Layout = "~/Views/Shared/_LayoutSI.cshtml";
}

@section Tilte {
    <div class="col-xs-12" id="current_menu" data-level_1="FG-WMS" data-level_2="Receiving Management" data-level_3="Put Away Scan"></div>

}
<div class="container-fluid">
    <div class="box-body my-2 bg-white">
        <div class="row p-0 m-0">
            <div class="col-md-1 p-1  text-right">
                <label><b>Location</b></label>
            </div>
            <div class="col-md-1 p-1">
                <input type="text" name="lct_cd" id="lct_cd" maxlength="200" class="input-text form-control">
            </div>
            <div class="col-md-1 p-1 text-center">
                <input type="checkbox" id="myCheck">Keep this location<br>
            </div>
            <div class="col-md-1 p-1  text-right">
                <label><b>Buyer QR</b></label>
            </div>
            <div class="col-md-2 p-1">
                <input type="text" name="mt_barcode" id="mt_barcode" class="form-control" maxlength="50" />
            </div>
            <div class="col-md-1 p-1">
                <button id="saveBtn" class="btn btn-sm btn-primary button-srh"><i class="fa fa-save">&nbsp;Save</i></button>
            </div>
        </div>
    </div>
</div>
    <div id="loading"><img id="loading-image" src="/Images/loding.gif" alt="Loading..." /></div>
